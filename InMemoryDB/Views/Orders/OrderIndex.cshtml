@model PapaPizza.Models.OrderViewModel.OrderViewModel
@inject PapaPizza.Services.CartService cartService
@{
    ViewData["Title"] = "Index";
}
<h2>Order Index</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                <span>Cart items</span>
            </th>
            <th>
                <span>Price</span>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var dish in Model.Cart.CartItems)
            {
            <tr>
                <td>
                    <b>@dish.Dish.Name</b>
                    <br />
                </td>
                <td>
                    <span>
                        @cartService.ModifiedCartItemPrice(dish.CartItemId, dish.CartItemIngredients, dish.DishId)
                    </span>

                </td>
            </tr>
        }
        <tr>
            <td>
                <b>Total:</b>
            </td>
            <td>
                <span>@cartService.TotalCartSum(Model.Cart.CartItems.Select(i => i.CartItemId).FirstOrDefault())</span>
            </td>
        </tr>

    </tbody>
</table>

<form asp-action="OrderIndex" asp-controller="Orders">
    <input asp-for="ApplicationUser.FirstName" />
    <label asp-for="ApplicationUser.FirstName"></label>
    <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>

    <input asp-for="ApplicationUser.LastName" />
    <label asp-for="ApplicationUser.LastName"></label>
    <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>

    <input asp-for="ApplicationUser.Street" />
    <label asp-for="ApplicationUser.Street"></label>
    <span asp-validation-for="ApplicationUser.Street" class="text-danger"></span>



    

    <input type="button" class="btn btn-info" onclick="history.go(-1)" value="Return to Cart" />

    <button type="submit" class="btn btn-success">Buy</button>
</form>

